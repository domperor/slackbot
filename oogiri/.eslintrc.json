{
    "extends": "@hakatashi/eslint-config/typescript",
    "rules": {
        "no-console": "off",
        "no-div-regex": "off",
        "no-nested-ternary": "off",
        "no-use-before-define": "off",
        "prefer-destructuring": ["error", {
            "VariableDeclarator": {
                "array": true,
                "object": true
            },
            "AssignmentExpression": {
                "array": true,
                "object": false
            }
        }, {
            "enforceForRenamedProperties": false
        }]
    }
}
