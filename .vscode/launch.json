{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Slackbot起動",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "dev", "--", "--only", "${input:onlyArgument}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "onlyArgument",
            "type": "promptString",
            "description": "起動するBOTの種類",
            "default": "helloworld"
        }
    ]
}