{
  "ts-node": {
    "files": true
  },
  "files": [
    "globals.d.ts"
  ],
  "include": [
    "**/*"
  ],
  "exclude": [
    "./bin",
    "./node_modules"
  ],
  "compilerOptions": {
    "target": "es2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2021", "DOM"],
    "skipLibCheck": true,
    "experimentalDecorators": true
  }
}
